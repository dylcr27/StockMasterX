@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid px-4 pt-3">
    <!-- Header del Dashboard -->
    <div class="row">
        <div class="col-12">
            <div class="dashboard-header text-center">
                <h1>Dashboard</h1>
                <p>Resumen general del sistema</p>
            </div>
        </div>
    </div>

    <!-- Tarjetas de estadísticas -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stats-card card-primary">
                <div class="card-body">
                    <h5 class="card-title">Total Productos</h5>
                    <h2 class="card-text">@(ViewBag.TotalProducts ?? 0)</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stats-card card-success">
                <div class="card-body">
                    <h5 class="card-title">Categorías</h5>
                    <h2 class="card-text">@(ViewBag.TotalCategories ?? 0)</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stats-card card-info">
                <div class="card-body">
                    <h5 class="card-title">Proveedores</h5>
                    <h2 class="card-text">@(ViewBag.TotalSuppliers ?? 0)</h2>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="stats-card card-danger">
                <div class="card-body">
                    <h5 class="card-title">Stock Bajo</h5>
                    <h2 class="card-text">@(ViewBag.LowStockProducts?.Count ?? 0)</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Productos con stock bajo -->
        <div class="col-lg-6 mb-4">
            <div class="content-card">
                <div class="card-header header-warning">
                    Productos con Stock Bajo
                </div>
                <div class="card-body">
                    @if (ViewBag.LowStockProducts != null && ((List<StockMasterX.Models.Product>)ViewBag.LowStockProducts).Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th class="text-center">Stock Actual</th>
                                        <th class="text-center">Stock Mínimo</th>
                                        <th class="text-center">Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in (List<StockMasterX.Models.Product>)ViewBag.LowStockProducts)
                                    {
                                        <tr>
                                            <td><strong>@product.Name</strong></td>
                                            <td class="text-center">
                                                <span class="badge bg-danger">@product.CurrentStock</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-warning">@product.MinimumStock</span>
                                            </td>
                                            <td class="text-center">
                                                @if (product.CurrentStock == 0)
                                                {
                                                    <span class="badge bg-danger">Agotado</span>
                                                }
                                                else if (product.CurrentStock < product.MinimumStock / 2)
                                                {
                                                    <span class="badge bg-danger">Crítico</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Bajo</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success text-center mb-0">
                            <strong>✅ ¡Todo en orden!</strong><br>
                            No hay productos con stock bajo
                        </div>
                    }
                    <div class="text-center mt-3">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-warning">
                            Ver todos los productos →
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Movimientos recientes -->
        <div class="col-lg-6 mb-4">
            <div class="content-card">
                <div class="card-header header-info">
                    Movimientos Recientes
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentMovements != null && ((List<StockMasterX.Models.InventoryMovement>)ViewBag.RecentMovements).Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Producto</th>
                                        <th class="text-center">Tipo</th>
                                        <th class="text-center">Cantidad</th>
                                        <th class="text-center">Fecha</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var movement in (List<StockMasterX.Models.InventoryMovement>)ViewBag.RecentMovements)
                                    {
                                        <tr>
                                            <td><strong>@movement.Product.Name</strong></td>
                                            <td class="text-center">
                                                @if (movement.Type == StockMasterX.Models.MovementType.Entry)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-arrow-down-circle"></i> Entrada
                                                    </span>
                                                }
                                                else if (movement.Type == StockMasterX.Models.MovementType.Exit)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-arrow-up-circle"></i> Salida
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-arrow-left-right"></i> Ajuste
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <strong>@movement.Quantity</strong>
                                            </td>
                                            <td class="text-center">
                                                <small class="text-muted">@movement.MovementDate.ToString("dd/MM/yyyy")</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center mb-0">
                            <strong>ℹ️ Sin movimientos</strong><br>
                            No hay movimientos registrados aún
                        </div>
                    }
                    <div class="text-center mt-3">
                        <a asp-controller="InventoryMovements" asp-action="Index" class="btn btn-info">
                            Ver todos los movimientos →
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección adicional: Accesos rápidos -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="content-card">
                <div class="card-header header-info">
                    Accesos Rápidos
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Products" asp-action="Create" class="btn btn-primary w-100">
                                Nuevo Producto
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Categories" asp-action="Create" class="btn btn-success w-100">
                                Nueva Categoría
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Suppliers" asp-action="Create" class="btn btn-info w-100">
                                Nuevo Proveedor
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="InventoryMovements" asp-action="Create" class="btn btn-warning w-100">
                                Registrar Movimiento
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>