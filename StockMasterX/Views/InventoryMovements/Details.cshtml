@model StockMasterX.Models.InventoryMovement

@{
    ViewData["Title"] = "Detalles del Movimiento";
}

<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>📊 Detalles del Movimiento</h1>
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">✏️ EDITAR</a>
                    <a asp-action="Index" class="btn btn-secondary">⬅️ VOLVER</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header @(Model.Type == StockMasterX.Models.MovementType.Entry ? "bg-success" : Model.Type == StockMasterX.Models.MovementType.Exit ? "bg-danger" : "bg-warning") text-white">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h3 class="mb-0">
                                @if (Model.Type == StockMasterX.Models.MovementType.Entry)
                                {
                                    <span>📥 Movimiento de Entrada</span>
                                }
                                else if (Model.Type == StockMasterX.Models.MovementType.Exit)
                                {
                                    <span>📤 Movimiento de Salida</span>
                                }
                                else
                                {
                                    <span>🔧 Ajuste de Inventario</span>
                                }
                            </h3>
                            <p class="mb-0"><small>ID del Movimiento: #@Model.Id</small></p>
                        </div>
                        <div class="col-md-4 text-end">
                            <h2 class="mb-0">
                                @if (Model.Type == StockMasterX.Models.MovementType.Entry)
                                {
                                    <span>+@Model.Quantity</span>
                                }
                                else if (Model.Type == StockMasterX.Models.MovementType.Exit)
                                {
                                    <span>-@Model.Quantity</span>
                                }
                                else
                                {
                                    <span>@Model.Quantity</span>
                                }
                            </h2>
                            <small>unidades</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Product != null)
                    {
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <div class="alert alert-info">
                                    <h5 class="alert-heading">📦 Producto Afectado</h5>
                                    <hr />
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p class="mb-1"><strong>Nombre:</strong> @Model.Product.Name</p>
                                            <p class="mb-1"><strong>SKU:</strong> @Model.Product.SKU</p>
                                        </div>
                                        <div class="col-md-6">
                                            @if (Model.Product.Category != null)
                                            {
                                                <p class="mb-1"><strong>Categoría:</strong> <span class="badge bg-secondary">@Model.Product.Category.Name</span></p>
                                            }
                                            <p class="mb-1">
                                                <strong>Stock Actual:</strong>
                                                @if (Model.Product.CurrentStock <= Model.Product.MinimumStock)
                                                {
                                                    <span class="badge bg-danger">⚠️ @Model.Product.CurrentStock</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">✅ @Model.Product.CurrentStock</span>
                                                }
                                            </p>
                                        </div>
                                    </div>
                                    <div class="mt-2">
                                        <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Product.Id" class="btn btn-sm btn-primary">
                                            👁️ Ver Detalles del Producto
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted mb-1">📅 Fecha del Movimiento</label>
                                <p class="h5">@Model.MovementDate.ToString("dd/MM/yyyy HH:mm:ss")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted mb-1">🔢 Cantidad</label>
                                <p class="h5">
                                    @if (Model.Type == StockMasterX.Models.MovementType.Entry)
                                    {
                                        <span class="text-success">+@Model.Quantity unidades</span>
                                    }
                                    else if (Model.Type == StockMasterX.Models.MovementType.Exit)
                                    {
                                        <span class="text-danger">-@Model.Quantity unidades</span>
                                    }
                                    else
                                    {
                                        <span class="text-warning">@Model.Quantity unidades</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted mb-1">📝 Tipo de Movimiento</label>
                                <p>
                                    @if (Model.Type == StockMasterX.Models.MovementType.Entry)
                                    {
                                        <span class="badge bg-success fs-5">📥 Entrada</span>
                                    }
                                    else if (Model.Type == StockMasterX.Models.MovementType.Exit)
                                    {
                                        <span class="badge bg-danger fs-5">📤 Salida</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark fs-5">🔧 Ajuste</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted mb-1">👤 Usuario</label>
                                <p class="h5">@(Model.UserId ?? "Sistema")</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="info-item">
                                <label class="text-muted mb-1">📋 Razón / Observaciones</label>
                                <p class="h5">@(Model.Reason ?? "Sin observaciones")</p>
                            </div>
                        </div>
                    </div>

                    @if (Model.Product != null)
                    {
                        var estimatedValue = Model.Quantity * Model.Product.PurchasePrice;

                        <div class="alert alert-secondary mt-3">
                            <h5 class="alert-heading">💰 Valor Estimado del Movimiento</h5>
                            <p class="mb-0 h4">₡@estimatedValue.ToString("N2")</p>
                            <small class="text-muted">Basado en el precio de compra del producto (₡@Model.Product.PurchasePrice.ToString("N2") x @Model.Quantity unidades)</small>
                        </div>
                    }

                    <div class="timeline mt-4">
                        <h5 class="mb-3">📈 Línea de Tiempo</h5>
                        <div class="alert alert-light">
                            <p class="mb-2">
                                <strong>@Model.MovementDate.ToString("dd/MM/yyyy HH:mm")</strong> -
                                @if (Model.Type == StockMasterX.Models.MovementType.Entry)
                                {
                                    <span class="text-success">Se agregaron @Model.Quantity unidades</span>
                                }
                                else if (Model.Type == StockMasterX.Models.MovementType.Exit)
                                {
                                    <span class="text-danger">Se retiraron @Model.Quantity unidades</span>
                                }
                                else
                                {
                                    <span class="text-warning">Se ajustaron @Model.Quantity unidades</span>
                                }
                            </p>
                            @if (Model.Product != null)
                            {
                                <p class="mb-0 text-muted"><small>Producto: @Model.Product.Name (@Model.Product.SKU)</small></p>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">✏️ EDITAR MOVIMIENTO</a>
                        <div class="d-flex gap-2">
                            @if (Model.Product != null)
                            {
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Product.Id" class="btn btn-info">📦 VER PRODUCTO</a>
                            }
                            <a asp-action="Index" class="btn btn-secondary">📋 VER TODOS LOS MOVIMIENTOS</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .info-item {
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 8px;
        margin-bottom: 15px;
    }

        .info-item label {
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

    .card {
        border: none;
    }

    .timeline {
        border-left: 3px solid #0d6efd;
        padding-left: 20px;
    }
</style>