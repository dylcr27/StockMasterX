@model StockMasterX.Models.InventoryMovement

@{
    ViewData["Title"] = "Editar Movimiento";
}

<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1>✏️ Editar Movimiento de Inventario</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-body">
                    <input type="hidden" id="movementId" value="@Model.Id" />

                    <div class="mb-3">
                        <label class="form-label">Producto *</label>
                        <select id="productId" class="form-control">
                            <option value="">-- Seleccione un producto --</option>
                            @if (ViewBag.ProductId != null)
                            {
                                @foreach (var item in (SelectList)ViewBag.ProductId)
                                {
                                    if (item.Value == Model.ProductId.ToString())
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Tipo de Movimiento *</label>
                        <select id="type" class="form-control">
                            @if (Model.Type == StockMasterX.Models.MovementType.Entry)
                            {
                                <option value="0" selected>📥 Entrada</option>
                            }
                            else
                            {
                                <option value="0">📥 Entrada</option>
                            }

                            @if (Model.Type == StockMasterX.Models.MovementType.Exit)
                            {
                                <option value="1" selected>📤 Salida</option>
                            }
                            else
                            {
                                <option value="1">📤 Salida</option>
                            }

                            @if (Model.Type == StockMasterX.Models.MovementType.Adjustment)
                            {
                                <option value="2" selected>🔧 Ajuste</option>
                            }
                            else
                            {
                                <option value="2">🔧 Ajuste</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Cantidad *</label>
                        <input type="number" id="quantity" class="form-control" min="1" value="@Model.Quantity" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Razón / Motivo *</label>
                        <textarea id="reason" class="form-control" rows="3">@Model.Reason</textarea>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Fecha del Movimiento</label>
                        <input type="datetime-local" id="movementDate" class="form-control" value="@Model.MovementDate.ToString("yyyy-MM-ddTHH:mm")" />
                    </div>

                    <div class="d-flex gap-2">
                        <button type="button" id="updateBtn" class="btn btn-success btn-lg">💾 Guardar Cambios</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">❌ Cancelar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.getElementById('updateBtn').addEventListener('click', function() {
        const data = {
            id: parseInt(document.getElementById('movementId').value),
            productId: parseInt(document.getElementById('productId').value),
            type: parseInt(document.getElementById('type').value),
            quantity: parseInt(document.getElementById('quantity').value),
            reason: document.getElementById('reason').value.trim(),
            movementDate: document.getElementById('movementDate').value
        };

        // Validaciones
        if (!data.productId || isNaN(data.productId)) {
            Swal.fire({
                icon: 'error',
                title: 'Campo requerido',
                text: 'Por favor seleccione un producto'
            });
            return;
        }

        if (!data.quantity || data.quantity < 1) {
            Swal.fire({
                icon: 'error',
                title: 'Cantidad inválida',
                text: 'La cantidad debe ser mayor a 0'
            });
            return;
        }

        if (!data.reason) {
            Swal.fire({
                icon: 'error',
                title: 'Campo requerido',
                text: 'Por favor ingrese la razón del movimiento'
            });
            return;
        }

        Swal.fire({
            title: 'Actualizando...',
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });

        fetch('/InventoryMovements/UpdateMovement', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
        })
        .then(response => response.json())
        .then(result => {
            if (result.success) {
                Swal.fire({
                    icon: 'success',
                    title: '¡Éxito!',
                    text: result.message,
                    timer: 2000,
                    showConfirmButton: false
                }).then(() => {
                    window.location.href = '/InventoryMovements';
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: result.message
                });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Ocurrió un error al actualizar el movimiento'
            });
        });
    });
</script>