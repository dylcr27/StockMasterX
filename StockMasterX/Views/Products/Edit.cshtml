@model StockMasterX.Models.Product

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container-fluid px-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1>✏️ Editar Producto</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-body">
                    <input type="hidden" id="productId" value="@Model.Id" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Nombre *</label>
                            <input type="text" id="name" class="form-control" value="@Model.Name" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">SKU *</label>
                            <input type="text" id="sku" class="form-control" value="@Model.SKU" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Descripción</label>
                        <textarea id="description" class="form-control" rows="3">@Model.Description</textarea>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Categoría *</label>
                            <select id="categoryId" class="form-control">
                                <option value="">-- Seleccione --</option>
                                @if (ViewBag.CategoryId != null)
                                {
                                    @foreach (var item in (SelectList)ViewBag.CategoryId)
                                    {
                                        if (item.Value == Model.CategoryId.ToString())
                                        {
                                            <option value="@item.Value" selected>@item.Text</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Proveedor *</label>
                            <select id="supplierId" class="form-control">
                                <option value="">-- Seleccione --</option>
                                @if (ViewBag.SupplierId != null)
                                {
                                    @foreach (var item in (SelectList)ViewBag.SupplierId)
                                    {
                                        if (item.Value == Model.SupplierId.ToString())
                                        {
                                            <option value="@item.Value" selected>@item.Text</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Precio de Compra (₡) *</label>
                            <input type="number" id="purchasePrice" class="form-control" step="0.01" min="0" value="@Model.PurchasePrice" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Precio de Venta (₡) *</label>
                            <input type="number" id="salePrice" class="form-control" step="0.01" min="0" value="@Model.SalePrice" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Stock Actual *</label>
                            <input type="number" id="currentStock" class="form-control" min="0" value="@Model.CurrentStock" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Stock Mínimo *</label>
                            <input type="number" id="minimumStock" class="form-control" min="0" value="@Model.MinimumStock" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">URL de Imagen (opcional)</label>
                        <input type="url" id="imageUrl" class="form-control" value="@Model.ImageUrl" />
                    </div>

                    <div class="form-check mb-4">
                        @if (Model.IsActive)
                        {
                            <input type="checkbox" id="isActive" class="form-check-input" checked />
                        }
                        else
                        {
                            <input type="checkbox" id="isActive" class="form-check-input" />
                        }
                        <label class="form-check-label">Producto Activo</label>
                    </div>

                    <div class="d-flex gap-3 mt-4">
                        <button type="button" id="updateBtn" class="btn btn-success btn-lg">💾 GUARDAR CAMBIOS</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">❌ CANCELAR</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.getElementById('updateBtn').addEventListener('click', function() {
        console.log('Update button clicked');

        const data = {
            id: parseInt(document.getElementById('productId').value),
            name: document.getElementById('name').value.trim(),
            sku: document.getElementById('sku').value.trim(),
            description: document.getElementById('description').value.trim(),
            categoryId: parseInt(document.getElementById('categoryId').value),
            supplierId: parseInt(document.getElementById('supplierId').value),
            purchasePrice: parseFloat(document.getElementById('purchasePrice').value) || 0,
            salePrice: parseFloat(document.getElementById('salePrice').value) || 0,
            currentStock: parseInt(document.getElementById('currentStock').value) || 0,
            minimumStock: parseInt(document.getElementById('minimumStock').value) || 0,
            imageUrl: document.getElementById('imageUrl').value.trim(),
            isActive: document.getElementById('isActive').checked
        };

        console.log('Data to send:', data);

        if (!data.name || !data.sku || !data.categoryId || !data.supplierId) {
            Swal.fire({
                icon: 'error',
                title: 'Campos requeridos',
                text: 'Por favor complete: Nombre, SKU, Categoría y Proveedor'
            });
            return;
        }

        Swal.fire({
            title: 'Actualizando...',
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });

        fetch('/Products/UpdateProduct', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
        })
        .then(response => response.json())
        .then(result => {
            console.log('Response:', result);
            if (result.success) {
                Swal.fire({
                    icon: 'success',
                    title: '¡Éxito!',
                    text: result.message,
                    timer: 2000,
                    showConfirmButton: false
                }).then(() => {
                    window.location.href = '/Products';
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: result.message
                });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Ocurrió un error al actualizar el producto'
            });
        });
    });
</script>