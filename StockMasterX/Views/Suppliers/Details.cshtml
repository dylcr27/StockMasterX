@model StockMasterX.Models.Supplier

@{
    ViewData["Title"] = "Detalles del Proveedor";
}

<div class="container-fluid px-4">
    <div class="row">
        <div class="col-12">
            <!-- Header de la página -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>🏢 Detalles del Proveedor</h1>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">✏️ Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">⬅️ Volver</a>
                </div>
            </div>

            <!-- Card Principal -->
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">@Model.Name</h3>
                </div>
                <div class="card-body p-4">
                    <!-- Información del proveedor -->
                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted mb-2 d-block">👤 PERSONA DE CONTACTO</label>
                                <p class="h5 mb-0">@(Model.ContactPerson ?? "No especificado")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted mb-2 d-block">📧 EMAIL</label>
                                <p class="h5 mb-0">
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <a href="mailto:@Model.Email">@Model.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted mb-2 d-block">📞 TELÉFONO</label>
                                <p class="h5 mb-0">@(Model.Phone ?? "No especificado")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted mb-2 d-block">📍 DIRECCIÓN</label>
                                <p class="h5 mb-0">@(Model.Address ?? "No especificada")</p>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted mb-2 d-block">📅 FECHA DE REGISTRO</label>
                                <p class="h5 mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted mb-2 d-block">✅ ESTADO</label>
                                <p class="mb-0">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success fs-6 px-3 py-2">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6 px-3 py-2">Inactivo</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4">
                        <div class="col-12">
                            <div class="info-item">
                                <label class="text-muted mb-2 d-block">📦 TOTAL DE PRODUCTOS</label>
                                <p class="mb-0">
                                    <span class="badge bg-primary fs-6 px-3 py-2">@Model.Products.Count productos</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    @if (Model.Products.Any())
                    {
                        <!-- Separador -->
                        <hr class="my-4" />

                        <!-- Título de productos -->
                        <h4 class="mb-3">📦 Productos de este Proveedor</h4>

                        <!-- Tabla de productos -->
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th style="min-width: 120px;">SKU</th>
                                        <th style="min-width: 180px;">NOMBRE</th>
                                        <th style="min-width: 140px;">CATEGORÍA</th>
                                        <th class="text-end" style="min-width: 130px;">PRECIO COMPRA</th>
                                        <th class="text-center" style="min-width: 80px;">STOCK</th>
                                        <th class="text-center" style="min-width: 100px;">ESTADO</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products.Take(10))
                                    {
                                        <tr>
                                            <td><strong>@product.SKU</strong></td>
                                            <td>@product.Name</td>
                                            <td>
                                                @if (product.Category != null)
                                                {
                                                    <span class="badge bg-secondary px-3 py-2">@product.Category.Name</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary px-3 py-2">Sin categoría</span>
                                                }
                                            </td>
                                            <td class="text-end fw-bold">₡@product.PurchasePrice.ToString("N0")</td>
                                            <td class="text-center">
                                                @if (product.CurrentStock <= product.MinimumStock)
                                                {
                                                    <span class="badge bg-danger px-3 py-2">@product.CurrentStock</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success px-3 py-2">@product.CurrentStock</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (product.IsActive)
                                                {
                                                    <span class="badge bg-success px-3 py-2">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary px-3 py-2">Inactivo</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @if (Model.Products.Count > 10)
                        {
                            <p class="text-muted text-center mt-3 mb-0">Mostrando 10 de @Model.Products.Count productos</p>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info mt-4 mb-0">
                            <i class="bi bi-info-circle me-2"></i>No hay productos asociados a este proveedor aún.
                        </div>
                    }
                </div>

                <!-- Footer del card -->
                <div class="card-footer bg-light py-3">
                    <div class="d-flex justify-content-between flex-wrap gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            ✏️ Editar Proveedor
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            📋 Ver Todos los Proveedores
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .info-item {
        padding: 1.25rem;
        background-color: var(--gray-lighter);
        border-radius: var(--radius);
        border-left: 4px solid var(--primary);
        height: 100%;
        transition: var(--transition);
    }

        .info-item:hover {
            background-color: #e2e8f0;
            transform: translateX(2px);
        }

        .info-item label {
            font-weight: 700;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            color: var(--gray);
        }

        .info-item p {
            color: var(--dark);
        }

    .table th {
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 0.5px;
        padding: 1rem;
    }

    .table td {
        padding: 1rem;
        font-size: 0.9rem;
    }

    .badge {
        font-weight: 600;
        font-size: 0.85rem;
        white-space: nowrap;
    }

    .card-header.bg-primary {
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%) !important;
    }
</style>