@model IEnumerable<StockMasterX.Models.Supplier>

@{
    ViewData["Title"] = "Proveedores";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h1>🏢 Gestión de Proveedores</h1>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary btn-lg">
            ➕ Nuevo Proveedor
        </a>
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-info">
                    <tr>
                        <th>Nombre</th>
                        <th>Contacto</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Dirección</th>
                        <th class="text-center">Productos</th>
                        <th class="text-center">Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Name</strong></td>
                            <td>@item.ContactPerson</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Email))
                                {
                                    <a href="mailto:@item.Email">@item.Email</a>
                                }
                            </td>
                            <td>@item.Phone</td>
                            <td>@item.Address</td>
                            <td class="text-center">
                                <span class="badge bg-info">@item.Products.Count productos</span>
                            </td>
                            <td class="text-center">
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactivo</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">👁️</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>